# ===========================================
# TOOLFLOCK APPLICATION CONFIGURATION EXAMPLE
# ===========================================
# Copy this file to .env and fill in your actual values

# Flask Configuration
SECRET_KEY=your-super-secret-key-change-this-in-production
FLASK_ENV=development
FLASK_DEBUG=True
FLASK_APP=app.py

# Application Settings
APP_NAME=Toolflock
APP_VERSION=1.0.0
APP_URL=http://localhost:5000

# Database Configuration
DATABASE_URL=sqlite:///data.db
DB_PATH=data.db

# Security Settings
SESSION_COOKIE_SECURE=False
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax
PERMANENT_SESSION_LIFETIME=3600

# File Upload Settings
MAX_CONTENT_LENGTH=16777216
UPLOAD_FOLDER=uploads
ALLOWED_EXTENSIONS=pdf,png,jpg,jpeg,gif,docx,xlsx,txt

# Email Configuration (if using Flask-Mail)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USE_SSL=False
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=your-email@gmail.com

# MongoDB Configuration (if using)
MONGODB_URI=mongodb://localhost:27017/toolflock
MONGODB_DB=toolflock

# External API Keys (add as needed)
# GOOGLE_API_KEY=your-google-api-key
# OPENAI_API_KEY=your-openai-api-key
# CLOUDINARY_URL=your-cloudinary-url

# Rate Limiting
RATELIMIT_STORAGE_URL=memory://
RATELIMIT_DEFAULT=100 per hour

# Logging
LOG_LEVEL=INFO
LOG_FILE=app.log

# Development Settings
TESTING=False
WTF_CSRF_ENABLED=True

# Git Configuration (for repository setup)
GIT_USER_NAME=Your Name
GIT_USER_EMAIL=your.email@example.com